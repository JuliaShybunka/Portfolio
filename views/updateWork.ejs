<%- include('topPage'); -%>
    <div class="container">
        <div class="card-group row">
            <% works.forEach(work => {%>
                <div class="col-md-3">
                    <div class="card" <img src="data:image/<%=work.image.contentType%>;base64,<%=work.image.data.toString('base64')%>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= work.title %>
                            </h5>
                            <a href=<%=work.link %> class="btn btn-primary" target="_blank">View more</a>
                            <form action="/delete" method="POST">
                                <input type="hidden" name="deleteWork" value=<%=work._id %>>
                                <button type="submit">Delete</button>
                            </form>
                            <form action="/update" method="POST">
                                <input type="hidden" name="updateWork" value=<%=work._id %>>
                                <button type="submit">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% });  %>
        </div>
    </div>
    <%- include('bottomPage'); -%>